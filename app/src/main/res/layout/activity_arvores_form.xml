<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Form.ArvoresForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/form_arvores">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="76dp"
            android:src="@drawable/logo_cor2"
            android:layout_alignParentRight="false"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_marginRight="76dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ÁRVORES"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#413F24"
            android:typeface="normal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:hint="Id"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/idade"
            android:hint="Idade"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude"
            android:hint="Latitude"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/idade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/idade"
            android:layout_alignEnd="@+id/idade" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/logetude"
            android:hint="Longetude"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/latitude"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/idade"
            android:layout_alignEnd="@+id/idade" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/geocode"
            android:hint="Geocode"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/logetude"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/idade"
            android:layout_alignEnd="@+id/idade" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/status"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:id="@+id/ativo_sim"
                android:textSize="16dp"
                android:textColor="#413F24"
                android:textColorHighlight="#413F24"
                android:textColorHint="#413F24"
                android:textColorLink="#413F24"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:id="@+id/ativo_nao"
                android:textColor="#413F24"
                android:textSize="16dp"
                android:textColorHighlight="#413F24"
                android:textColorHint="#413F24"
                android:textColorLink="#413F24"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativo?"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_below="@+id/geocode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/especie_idespecie"
            android:layout_below="@+id/status"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:hint="Espécie"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:hint="Proprietário"
            android:layout_below="@+id/especie_idespecie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/especie_idespecie"
            android:layout_alignEnd="@+id/especie_idespecie" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Salvar"
            android:id="@+id/btn_salvar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#9EC934"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorHint="#ffffff"
            android:textColorLink="#ffffff"
            android:textSize="16dp"
            android:allowUndo="false"
            android:clickable="false"
            android:longClickable="false" />

    </RelativeLayout>
</RelativeLayout>
