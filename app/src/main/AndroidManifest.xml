<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tiago.anative">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginForm"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ArvoresScrollingActivity"
            android:label="@string/title_activity_arvores_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ArvoreCadActivity" />
        <activity android:name=".List.MenuList" />
        <activity android:name=".Form.ArvoresForm" />
        <activity android:name=".Form.ProprietariosForm" />
        <activity android:name=".Form.SolicitacoesForm" />
        <activity android:name=".Form.ServicosForm" />
        <activity android:name=".List.ArvoresList" />
        <activity android:name=".List.ProprietariosList" />
        <activity android:name=".List.ServicosList" />
        <activity android:name=".List.SolicitacoesList" />

    </application>

</manifest>